@model LuckySiteMonitor.Entities.ElmahConfig

@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "elmah-" + Model.Id })) {
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Id)
    @Html.Partial("_CreateOrEdit", Model)

    if (!string.IsNullOrEmpty(ViewBag.TestResult as string)) {
        <div id="test-elmah-@Model.Id">@Html.Raw(ViewBag.TestResult as string)</div>
    }
    
    <button type="submit" name="isTest" value="True">Test</button>
    <button type="submit" name="Edit">Update</button>
    @Ajax.ActionLink("Cancel", "Details", "Elmah", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "elmah-" + Model.Id })

} 
